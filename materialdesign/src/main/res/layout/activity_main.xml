<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp">

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="110dp"
        android:layout_height="0dp"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="少儿编程"
        android:textColor="#333333"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@id/iv_icon"
        app:layout_constraintLeft_toRightOf="@id/iv_icon"
        app:layout_constraintTop_toTopOf="@id/iv_icon" />

    <Button
        android:id="@+id/btn_one"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="10dp"
        android:text="A"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/btn_two"
        app:layout_constraintTop_toBottomOf="@id/iv_icon"
        app:layout_goneMarginTop="@dimen/dp_10" />

    <Button
        android:id="@+id/btn_two"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_40"
        android:text="B"
        app:layout_constraintLeft_toRightOf="@id/btn_one"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/btn_one" />

    <Button
        android:id="@+id/btn_three"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_10"
        android:text="C"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/btn_four"
        app:layout_constraintTop_toBottomOf="@id/btn_one"
        app:layout_goneMarginTop="@dimen/dp_10" />

    <Button
        android:id="@+id/btn_four"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_40"
        android:text="D"
        app:layout_constraintLeft_toRightOf="@id/btn_three"
        app:layout_constraintRight_toLeftOf="@id/btn_five"
        app:layout_constraintTop_toTopOf="@id/btn_three" />

    <Button
        android:id="@+id/btn_five"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_40"
        android:text="E"
        app:layout_constraintLeft_toRightOf="@id/btn_four"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/btn_four" />

</android.support.constraint.ConstraintLayout>